@model sybring_project.Models.Db.Project


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <section>
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Edit Project Details</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />

                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Name" class="mb-2 mt-2">Name</label>
                                <input asp-for="Name" class="form-control mb-2" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="mb-2 mt-2"> Description </label>
                                <textarea asp-for="Description" class="form-control mb-2" id="floatingDescription" style="height: 70px;"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-outline-primary mb-3 mt-3">Save Changes</button>
                            </div>

                           
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<a asp-action="Index">Back to List</a>


