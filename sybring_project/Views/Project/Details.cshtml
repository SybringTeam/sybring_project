@model sybring_project.Models.ViewModels.ProjectBillingCompanyVM

@{
   
}

<h1>Project Details</h1>

<div>
    <h4>Project Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Project Id
        </dt>
        <dd class="col-sm-10">
            @if (Model.Projects.Any())
            {
                <ul>
                    @foreach (var item in Model.Projects)
                    {
                        <li>@item.Id</li>
                    }
                </ul>

            }
        </dd>

        <dt class="col-sm-2">
            Project Name
        </dt>
        <dd class="col-sm-10">
            @if (Model.Projects.Any())
            {
                <ul>
                    @foreach (var item in Model.Projects)
                    {
                        <li>@item.Name</li>
                    }
                </ul>

            }
        </dd>


        <dt class="col-sm-2">
            Supervisor Name
        </dt>
        <dd class="col-sm-10">
            @if (Model.Companies.Any())
            {
                <ul>
                    @foreach (var item in Model.Companies)
                    {
                        <li>@item.SupervisorName</li>
                    }
                </ul>

            }
        </dd>
        <dt class="col-sm-2">
            Supervisor Phone
        </dt>
        <dd class="col-sm-10">
            @if (Model.Companies.Any())
            {
                <ul>
                    @foreach (var item in Model.Companies)
                    {
                        <li>@item.SupervisorPhone</li>
                    }
                </ul>

            }
        </dd>
        <dt class="col-sm-2">
            Supervisor Email
        </dt>
        <dd class="col-sm-10">
            @if (Model.Companies.Any())
            {
                <ul>
                    @foreach (var item in Model.Companies)
                    {
                        <li>@item.SupervisorEmail</li>
                    }
                </ul>

            }
        </dd>

        <dt class="col-sm-2">Organization Number</dt>
        <dd class="col-sm-10">
        @if (Model.Companies.Any())
        {
            <ul>
                @foreach (var item in Model.Companies)
                {
                    <li>@item.OrgNumber</li>
                }
            </ul>

        }
        </dd>
        <dt class="col-sm-2">Company Website</dt>
        <dd class="col-sm-10">
        @if (Model.Companies.Any())
        {
            <ul>
                @foreach (var item in Model.Companies)
                {
                    <li>@item.CompanyWeb</li>
                }
            </ul>

        }
        </dd>
        
        <dt class="col-sm-2">Company Address</dt>
        <dd class="col-sm-10">
        

            @if (Model.Companies.Any())
            {
             <ul>
                 @foreach (var item in Model.Companies)
                    {
                        <li>@item.CompanyAddress</li>
                    }
                </ul>
                
            }

        </dd>
        <dt class="col-sm-2">
            Assignes Users
        </dt>
        <dd class="col-sm-10">

            @if (Model.Users.Any())
            {
                <ul>    
                    @foreach (var item in Model.Users)
                    {
                        <li>@item.FirstName @item.LastName</li>
                    }
                </ul>
            }
            else
            {
                <p>No users assigned</p>
            }

        </dd>
    </dl>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>
