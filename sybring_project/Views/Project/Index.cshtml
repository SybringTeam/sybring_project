@model IEnumerable<sybring_project.Models.Db.Project>


@{
    ViewData["Title"] = "Index";
}


<div class="section">
    <div class="row">
        <div id="ProjectContainer">
            @foreach (var item in Model)
            {
                <div id="ProjectContainer_@item.Id" style="display: none;">
                    <vc:show-project project-id="@item.Id"></vc:show-project>
                </div>
            }
        </div>
    </div>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12 bg-white">
            <table class="table" id="myTable">

                <thead>
                    <tr>

                        <th>
                            <p>NAME</p>

                        </th>
                        <th>
                            <p>DESCRIPTION</p>
                            
                        </th>
                        <th>
                            <p>USERS ON PROJECTS</p>
                        </th>

                        <th> ACTIONS</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                <a href="#" onclick="showProjectDetails('@item.Id');">
                                    @item.Name
                                 
                                </a>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id">
                                    @Html.DisplayFor(modelItem => item.Description)
                                </a>
                            </td>

                            <td>
                                <ul>
                                    @foreach (var user in item.Users)
                                    {
                                        <li>
                                            <a asp-controller="User" asp-action="Details" asp-route-id="@user.Id">@user.UserName</a><br />
                                        </li>



                                    }
                                </ul>

                            </td>


                            <td>
                                <div class="dropdown">
                                    <a class="icon" href="#" data-bs-toggle="dropdown" aria-expanded="true">
                                        <i class="bi bi-three-dots"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                        <li class="dropdown-header text-center">
                                            Actions
                                        </li>
                                        <li>
                                            <div class="d-flex">
                                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                                    <i class="bi bi-pencil"></i>
                                                    <span>Edit</span>
                                                </a>
                                                <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id">
                                                    <i class="bi bi-trash"></i>
                                                    <span>Delete</span>
                                                </a>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
 </section>

 <div>

    <a asp-action="Create" class="btn btn-primary"> Create New</a>
 
 </div>
