@model IEnumerable<sybring_project.Models.Db.Billing>

@{
    ViewData["Title"] = "Index";
}

<h1 class="card-title fs-3">Expense List</h1>



<section class="container-fluid">
    <div class="card p-3">
        <div class="col-lg-12 bg-white">

            <div id="billingInfo">

                <table class="table hover" id="myTable">
                    <thead>
                        <tr>
                            <th>
                                Date
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Cost
                            </th>
                            <th>
                                Project
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr onclick="window.location.href = '@Url.Action("Details", new { id = item.Id })';">
                                <td>@Html.DisplayFor(modelItem => item.DateStamp)</td>
                                <td>
                                    @if (item.Users != null && item.Users.Any())
                                    {
                                        <ul style="list-style-type:none;">
                                            @foreach (var user in item.Users)
                                            {
                                                <li>@user.FirstName @user.LastName</li>
                                                <li>@user.UserName</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span>No users associated</span>
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td style="width:100px;">
                                    <a href="@item.BlobLink" download>
                                        <img src="@item.BlobLink" class="card-img-top" alt="..." height="100" width="auto">
                                    </a>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Cost)</td>
                                <td>
                                    @if (item.ProjectId != null && item.ProjectId.Any())
                                    {
                                        <ul>
                                            @foreach (var user in item.ProjectId)
                                            {
                                                <li>@user.Name</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span>No Project associated</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
