@model sybring_project.Models.ViewModels.BillingVM


<hr />

<section>
    <div class="container col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add Billing</h5>
                <form asp-action="Create" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class=" mb-2">
                        <div class="form-floating">
                            <input asp-for="DateStamp" class="form-control" id="floatingDateStamp" placeholder="Date Stamp">
                            <label for="floatingDateStamp">Date Stamp</label>
                            <span asp-validation-for="DateStamp" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-2">
                        <div class="form-floating">
                            <textarea asp-for="Description" class="form-control" id="floatingDescription" placeholder="Description" style="height: 70px;"></textarea>
                            <label for="floatingDescription">Description</label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-2">
                        <label for="floatingProjectId">Project:</label>
                        <div class="form-label">
                            <select asp-for="ProjectId" id="floatingProjectId" aria-label="Project" class="form-select" multiple>
                                @foreach (var project in Model.ProjectId)
                                {
                                    <option value="@project.Id">@project.Name</option>
                                }
                            </select>
                            
                            <span asp-validation-for="ProjectId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class=" mb-2">
                        <div class="form-floating">
                            <select asp-for="SelectedUserId" class="form-select" id="floatingSelectedUserId" aria-label="User">
                                <option value="">Select a user</option>
                                @foreach (var user in Model.Users)
                                {
                                    <option value="@user.Id">@user.FirstName @user.LastName || @user.UserName</option>
                                }
                            </select>
                            <label for="floatingSelectedUserId">Select User:</label>
                            <span asp-validation-for="SelectedUserId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-2">
                        <div class="form-floating">
                            <input asp-for="Cost" class="form-control" id="floatingCost" placeholder="Cost">
                            <label for="floatingCost">Cost</label>
                            <span asp-validation-for="Cost" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="text-center">
                        <input type="hidden" name="projectId" value="@Model.ProjectId" />
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>

                    <div class="form-group">
                        <label asp-for="File">Upload File</label>
                        <input asp-for="File" type="file" class="form-control" />
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

