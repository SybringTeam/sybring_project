@model sybring_project.Models.ViewModels.ProjectBillingCompanyVM

<h2>Add Billing</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Projects" class="control-label">Project</label>
                <select asp-for="Projects" class="form-control">
                    <option value="">Select a project</option>
                    @foreach (var project in Model.Projects)
                    {
                        <option value="@project.Id">@project.Name</option>
                    }
                </select>
                <span asp-validation-for="Projects" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Companies" class="control-label">Company</label>
                <select asp-for="Companies" class="form-control">
                    <option value="">Select a company</option>
                    @foreach (var company in Model.Companies)
                    {
                        <option value="@company.Id">@company.Project</option>
                    }
                </select>
                <span asp-validation-for="Companies" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Users" class="control-label">User</label>
                <select asp-for="Users" class="form-control">
                    <option value="">Select a user</option>
                    @foreach (var user in Model.Users)
                    {
                        <option value="@user.Id">@user.UserName</option>
                    }
                </select>
                <span asp-validation-for="Users" class="text-danger"></span>
            </div>

            <!-- Add other fields for billing as needed -->

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
