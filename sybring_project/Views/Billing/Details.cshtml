@model sybring_project.Models.Db.Billing

@{
    ViewData["Title"] = "Billing Details";
}

<h1 class="card-title fs-3">Expense Details</h1>

<div class="card col-md-12 p-3">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-3 text-right"><strong>Name:</strong></div>
                    <div class="col-md-3 ">
                        @foreach (var user in Model.Users)
                        {
                            @user.FirstName @user.LastName
                        }
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 text-right"><strong>Description:</strong></div>
                    <div class="col-md-3">@Model.Description</div>
                </div>

                <div class="row">
                    <div class="col-md-3 text-right"><strong>Cost:</strong></div>
                    <div class="col-md-3">@Model.Cost</div>
                </div>

                <div class="row">
                    <div class="col-md-3 text-right"><strong>Project:</strong></div>
                    <div class="col-md-3">
                        <ul>
                            @foreach (var project in Model.ProjectId)
                            {
                                <li>@project.Name</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="row">
                    <div class="col-sm-12">
                        <strong>Image:</strong><br>
                        <a href="@Model.BlobLink" download>
                            <img src="@Model.BlobLink" class="card-img-top" alt="Image" style="max-width: 300px;">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
</div>
