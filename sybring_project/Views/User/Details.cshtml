<dt class="col-sm-3 mt-2">Task Description:</dt>
<dd class="col-sm-9">@Html.DisplayFor(model => model.TaskDescription)</dd>

<dt class="col-sm-3 mt-2">Income:</dt>
<dd class="col-sm-9">@Html.DisplayFor(model => model.UserIncome)</dd>

<dt class="col-sm-3 mt-2">ICE Contact:</dt>
<dd class="col-sm-9">@Html.DisplayFor(model => model.UserICE)</dd>

<dt class="col-sm-3 mt-2">ICE Contact Name:</dt>
<dd class="col-sm-9">@Html.DisplayFor(model => model.ICEContactName)</dd>



<dt class="col-sm-2">
    Working Projects
</dt>
<dd class="col-sm-10">
    @foreach (var project in Model.ProjectId)
    {
        <div>
            @project.Name
            <form asp-action="RemoveProject" method="post" style="display:inline;">
                <input type="hidden" name="userId" value="@Model.Id" />
                <input type="hidden" name="projectId" value="@project.Id" />
                <button type="submit" class="btn btn-danger remove-project" onclick="alertFunction()">Remove</button>
            </form>
        </div>
    }
</dd>
        </dl>
    </div>

</div>





<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    function alertFunction() {
        alert("Project has been removed from the user.");
    }
</script>

