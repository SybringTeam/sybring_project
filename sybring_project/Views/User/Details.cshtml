@model sybring_project.Models.Db.User

@{
    ViewData["Title"] = "User Details";
}

<partial name="~/Views/shared/_UserDetailsPartial.cshtml" />



<dt class="col-sm-3 mt-2">First Name:</dt>
<dd class="col-sm-9">@Html.DisplayFor(model => model.FirstName)</dd>

<dt class="col-sm-3 mt-2">Last Name:</dt>
<dd class="col-sm-9">@Html.DisplayFor(model => model.LastName)</dd>

