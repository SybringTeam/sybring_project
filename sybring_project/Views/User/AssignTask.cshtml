@model sybring_project.Models.Db.User

<h1>Assign Task</h1>

<form asp-action="AssignTask" method="post">
    <div class="form-group">
        <label for="projectId">Project:</label>
        <select asp-for="Id" class="form-control" asp-items="ViewBag.Projects"></select>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="userId">User:</label>
        <select asp-for="Id" class="form-control" asp-items="ViewBag.Users"></select>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Assign Task</button>
</form>
