@model IEnumerable<sybring_project.Models.Db.User>

<h1>Users List</h1>

<table class="table">
    <thead>
        <tr>


            @* <th>ID</th> *@

            <th>Name</th>
            
            <th>Projects</th>
            <th>Task Description</th>
            <th>User Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                @* <td>@item.Id</td> *@


                <td><a asp-action="Details" asp-route-id="@item.Id">@item.FirstName @item.LastName</a></td>


               @*  <td><a asp-action="Details" asp-route-id="@item.Id">@item.LastName</a></td> *@
                <td>
                    <ul>
                        @foreach (var project in item.ProjectId)
                        {
                            <li>@project.Name</li>
                         }
                    </ul>
                </td>
                <td><a asp-action="Details" asp-route-id="@item.Id">@item.TaskDescription</a></td>
                <td><a asp-action="Details" asp-route-id="@item.Id">@item.UserName</a></td>

                <td>
@*                     <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
 *@                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

