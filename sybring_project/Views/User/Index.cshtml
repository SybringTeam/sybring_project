@model IEnumerable<sybring_project.Models.Db.User>

@{
    ViewData["Title"] = "User List";
    var sortedUser = Model.OrderBy(u => u.FirstName);
}



<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">User List</h2>
            <div>
                <a asp-action="RoleView" asp-route-roleName="admin" class="btn btn-light btn-sm me-2">View Admin Users</a>
                <a asp-action="RoleView" asp-route-roleName="archive" class="btn btn-light btn-sm me-2">View Archived Users</a>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-sm">Create User</a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive" style="max-height: 1000px; overflow-y: auto;">
                <table id="myTable" class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">User</th>
                            <th scope="col">Projects</th>
                            <th scope="col">Username</th>
                            <th scope="col">Status</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in sortedUser)
                        {
                            <tr>
                                <td>
                                    <a href="#" onclick="showUser('@user.Id');" class="text-decoration-none">@user.FirstName @user.LastName</a>
                                </td>
                                <td>
                                    @foreach (var project in user.ProjectId)
                                    {
                                        <span class="badge bg-secondary">@project.Name</span>
                                    }
                                </td>
                                <td>
                                    @user.UserName
                                </td>
                                <td>
                                    <form asp-action="UpdateStatus" method="post" class="d-flex align-items-center">
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <select name="statusId" class="form-select form-select-sm me-2">
                                            @foreach (var status in ViewBag.Statuses as IEnumerable<sybring_project.Models.Db.Status>)
                                            {
                                                <option value="@status.Id">@status.Name.ToUpper()</option>
                                            }
                                        </select>
                                        <button type="submit" class="btn btn-sm btn-outline-primary">Update</button>
                                    </form>
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = user.Id })" class="btn btn-sm btn-outline-secondary me-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = user.Id })" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-trash"></i> Archive
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@foreach (var user in Model)
{
    <div id="showUserContainer_@user.Id" style="display: none;">
        <vc:show-user user-id="@user.Id"></vc:show-user>
    </div>
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


    <script>
        function showUser(userId) {
            $('#showUserContainer_' + userId).toggle();
        }

        document.querySelectorAll('select[name="statusId"]').forEach(select => {
            select.addEventListener('change', function () {
                this.closest('form').submit();
            });
        });

      
    </script>
}
