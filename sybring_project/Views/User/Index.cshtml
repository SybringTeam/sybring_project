@model IEnumerable<sybring_project.Models.Db.User>

    

   
<div class="frame">

    <div id="userInfoContainer">
            @foreach (var item in Model)
            {
                <div id="showUserContainer_@item.Id" style="display: none;">
                    <vc:show-user user-id="@item.Id"> </vc:show-user>
                </div>
            }    
    </div>
    <div class="adduser">
      

        <a asp-area="Identity" asp-page="/Account/Register" class="btn">Create User</a>
    </div>


<div class="table">
    <table id="myTable" class="table">
        <thead>
            <tr>
                    <th>
                        <label for="preference1">
                            <input type="checkbox" id="preference1" name="preference1"> 
                        </label>
                    </th>
                <th > USER</th>
                <th > PROJECTS</th>
                <th > USER NAME</th>
                <th > STATUS</th>
                <th > ACTIONS</th>
            </tr>
        </thead>

        @* <tbody> *@
            @foreach (var item in Model)
            {
                <tr>
                    <td>

                    </td>

                    <td>

                        <a href="#" onclick="showUser('@item.Id');" class="showDetails">@item.FirstName @item.LastName</a>

                    </td>

                    <td>
                        @foreach (var project in item.ProjectId)
                        {

                            @project.Name<br>

                        }
                    </td>

                 
                   
                    <td>@item.UserName</td>
                    
                      <td> </td>

                    <td class="dropdown">
                        <span><i class="bi bi-three-dots-vertical"></i></span>
                        <div class="dropdown-content">
                            <a asp-action="Edit" asp-route-id="@item.Id"> <i class="bi bi-pencil"></i>Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                        </div>
                       
                    </td>
                       
                </tr>
                
            }
    @* </tbody> *@
    </table>
</div>
<div>
    <a asp-action="RoleView" asp-route-roleName="admin" class="btn btn-primary">View Admin Users</a>
    <a asp-action="RoleView" asp-route-roleName="archive" class="btn btn-primary">View Archives Users</a>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>


