@model IEnumerable<sybring_project.Models.Db.Company>

@{
    ViewData["Title"] = "Index";
}

<div class="card-title p-3">
    <h2><strong> Company List </strong></h2>
</div>
<section class="container-fluid">
    <div class="card p-3">
        <div class="col-lg-12 bg-white">
            <table id="myTable" class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Project)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SupervisorName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CompanyWeb)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SupervisorPhone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SupervisorEmail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrgNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CompanyAddress)
                        </th>
                       
                      
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Project.Name)
                            </td>
                            <td>
                                <div class="dropdown">
                                    <a class="icon" href="#" data-bs-toggle="dropdown" aria-expanded="true">
                                        <i class="bi bi-three-dots"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                        <li class="dropdown-header text-center">
                                            Actions
                                        </li>
                                        <li>
                                            <div class="d-flex">
                                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                                    <i class="bi bi-pencil"></i>
                                                    <span>Edit</span>
                                                </a>
                                                <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id">
                                                    <i class="bi bi-trash"></i>
                                                    <span>Delete</span>
                                                </a>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupervisorName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CompanyWeb)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupervisorPhone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupervisorEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrgNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CompanyAddress)
                            </td>
                           
                          
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>