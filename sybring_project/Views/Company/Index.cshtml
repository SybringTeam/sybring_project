@model IEnumerable<sybring_project.Models.Db.Company>

@{
    ViewData["Title"] = "Index";
}

<h1 class="card-title fs-3">Company List</h1>

<section class="container-fluid">
    <div class="card p-3">
        <div class="col-lg-12 bg-white">
            <table id="myTable" class="table hover">
                <thead>
                    <tr>
                        <th>
                            Project
                        </th>
                        <th>
                            Supervisor Name
                        </th>
                        
                        <th>
                            Supervisor Phone
                        </th>
                        <th>
                            Supervisor Email
                        </th>
                        <th>
                            Org Number
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                           Website
                        </th>
                        
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="card-title">
                                    @Html.DisplayFor(modelItem => item.Project.Name)
                                </div>
                             
                            </td>
                            
                            <td>
                                <div class="">
                                @Html.DisplayFor(modelItem => item.SupervisorName)
                                </div>
                            </td>
                           
                            <td>
                                <a href="tel:@item.SupervisorPhone">@item.SupervisorPhone</a>
                            </td>
                            <td>
                                <a href="mailto:@item.SupervisorEmail">@item.SupervisorEmail</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrgNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CompanyAddress)
                            </td>
                            <td>
                                <a href="@item.CompanyWeb" target="_blank">@item.CompanyWeb </a>
                            </td>
                            <td>
                                <div class="dropdown">
                                    <a class="icon" href="#" data-bs-toggle="dropdown" aria-expanded="true">
                                        <i class="bi bi-three-dots"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                        <li class="dropdown-header text-center">
                                            Actions
                                        </li>
                                        <li>
                                            <div class="d-flex">
                                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                                    <i class="bi bi-pencil"></i>
                                                    <span>Edit</span>
                                                </a>
                                                <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id">
                                                    <i class="bi bi-trash"></i>
                                                    <span>Delete</span>
                                                </a>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                          
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>