@model sybring_project.Models.Db.Company

<div class="container">
    <h2>Delete Company</h2>
    <div class="confirmation-message">
        <p>Are you sure you want to delete the following company?</p>
        <p>ID: @Model.Id</p>
        <p>Supervisor Name: @Model.SupervisorName</p>
        <!-- Add other fields you want to display here -->
    </div>
    <div class="confirmation-buttons">
        <form method="post" action="@Url.Action("Delete", "ControllerName", new { id = Model.Id })">
            <button type="submit" class="delete">Delete</button>
        </form>
        <a href="@Url.Action("Index", "ControllerName")" class="cancel">Cancel</a>
    </div>
</div>

<div>
    <form asp-action="DeleteConfirmed" method="post" onsubmit="return confirm('Are you sure you want to delete this project?');">
       

        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index">Back to List</a>
    </form>
</div>
