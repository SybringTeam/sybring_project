@model sybring_project.Models.Db.Company

<div class="container ">
    <div class="row justify-content-center ">
        <div class="card col-md-6">
          
            <div class="card-header">
                <h4 class="card-title"> Company Details - Edit</h4>
            </div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CompanyWeb" class="control-label mb-2 mt-3">Company's Website</label>
                    <input asp-for="CompanyWeb" class="form-control" />
                    <span asp-validation-for="CompanyWeb" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SupervisorName" class="control-label mb-2 mt-2">Supervisor Name</label>
                    <input asp-for="SupervisorName" class="form-control"  />
                    <span asp-validation-for="SupervisorName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SupervisorPhone" class="control-label mb-2 mt-2">Supervisor Phone</label>
                    <input asp-for="SupervisorPhone" class="form-control"  />
                    <span asp-validation-for="SupervisorPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SupervisorEmail" class="control-label mb-2 mt-2">Supervisor Email</label>
                    <input asp-for="SupervisorEmail" class="form-control"  />
                    <span asp-validation-for="SupervisorEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrgNumber" class="control-label mb-2 mt-2">Org Number</label>
                    <input asp-for="OrgNumber" class="form-control" />
                    <span asp-validation-for="OrgNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyAddress" class="control-label mb-2 mt-2">Company Address</label>
                    <input asp-for="CompanyAddress" class="form-control" />
                    <span asp-validation-for="CompanyAddress" class="text-danger"></span>
                </div>
                @*   <div class="form-group">
                <label asp-for="ProjectId" class="control-label">Project</label>
                <input asp-for="ProjectId" class="form-control" style="width: 300px" />
                <span asp-validation-for="ProjectId" class="text-danger"></span>
                </div> *@

                <div class="form-group text-center mb-3 mt-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index" class="btn btn-outline-primary" >Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
