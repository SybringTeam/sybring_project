@model sybring_project.Models.Db.Holiday
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>



<div>
    <h2>Holiday Information</h2>
    <p>Date: @Model.Datum</p>
    <p>Day of the Week: @Model.Veckodag</p>
   @*  <p>Day of the Week: @Model.Veckodag.ToString("dddd")</p> *@
    <p>Working day off: @(Model.Arbetsfridag == "Ja" ? "Yes" : "No")</p>
