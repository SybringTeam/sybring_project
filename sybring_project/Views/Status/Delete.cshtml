@model sybring_project.Models.Db.Status

<div class="container">
    <h1>Delete Status</h1>
    <div>
        <h4>Are you sure you want to delete this status?</h4>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    ID
                </dt>
                <dd class="col-sm-10">
                    @Model.Id
                </dd>
                <dt class="col-sm-2">
                    Name
                </dt>
                <dd class="col-sm-10">
                    @Model.Name
                </dd>
            </dl>
            <form asp-action="Delete" asp-route-id="@Model.Id">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
