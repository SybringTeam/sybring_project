@model sybring_project.Models.Db.Project

@if (Model is not null)
{
    <div class="row align-items-top">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4><strong>Project Information</strong></h4>
                </div>
                <div class="card-body p-3">
                    <h2>@Model.Name</h2>
                    <p> Description:@Model.Description</p>

                    @if (Model.Companies.Any())
                    {
                        @foreach (var supervisor in Model.Companies)
                        {
                            <div>
                                <p>Supervisor Name: @supervisor.SupervisorName</p>
                                <p>Supervisor Email: @supervisor.SupervisorEmail</p>
                                <p>Supervisor Phone: @supervisor.SupervisorPhone</p>
                                <p>Company Address: @supervisor.CompanyAddress</p>
                                <p>Company Homepage: @supervisor.CompanyWeb</p>
                                <p>Organization Nr: @supervisor.OrgNumber</p>
                            </div>
                        }
                    }
                    else
                    {
                        <p>Currently no company info added.</p>
                    }
                </div>
            </div>
        </div>
    </div>
}