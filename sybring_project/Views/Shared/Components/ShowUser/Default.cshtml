@model sybring_project.Models.Db.User

<style>
    .status-default {
        /* Define default styles for other cases */
    }

    .orange {
        color: orange;
    }

    .blue {
        color: blue;
    }

    .green {
        color: green;
    }

    .accordion-button {
        background-color: #f8f9fa;
        color: #000;
        font-weight: bold;
    }

        .accordion-button:focus {
            box-shadow: none;
        }

    .accordion-item {
        border: none;
    }

    .accordion-body {
        background-color: #fff;
        border: 1px solid #ddd;
        border-top: none;
    }

    .card-body {
        background-color: #fff;
    }

    .btn-outline-danger {
        margin-top: 10px;
    }
</style>

<div id="userEle_@Model.Id" class="container my-4">
    @if (Model != null)
    {
        <div class="accordion" id="userInfoAccordion_@Model.Id">
            <div class="accordion-item">
                <h2 class="accordion-header" id="userInfoHeader_@Model.Id">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#userInfoCollapse_@Model.Id" aria-expanded="false" aria-controls="userInfoCollapse_@Model.Id">
                        User Information/ICE
                    </button>
                </h2>
                <div id="userInfoCollapse_@Model.Id" class="accordion-collapse collapse" aria-labelledby="userInfoHeader_@Model.Id" data-bs-parent="#userInfoAccordion_@Model.Id">
                    <div class="accordion-body">
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col">
                                    <h6><b>Name:</b> @Model.FirstName @Model.LastName</h6>
                                    <h6><b>Email:</b> @Model.Email</h6>
                                    <h6><b>Phone:</b> @Model.PhoneNumber</h6>
                                    <h6><b>Address:</b> @Model.Address</h6>
                                    <h6><b>Citizenship:</b> @Model.CitizenMembership</h6>
                                </div>
                                <div class="col">
                                    <h6><b>ICE Name:</b> @Model.ICEContactName </h6>
                                    <h6><b>ICE Phone:</b> @Model.UserICE </h6>
                                </div>
                                <div>
                                    <h6><b>Job Status</b></h6>
                                    <form asp-action="RemoveStatusToUser" method="post">
                                        @foreach (var status in Model.Status)
                                        {
                                            <div>
                                                <label>
                                                    <strong>
                                                        <input type="checkbox" name="statusId" value="@status.Id" />
                                                        <p class="@GetStatusColor(status.Name)">@status.Name.ToUpper()</p>
                                                    </strong>
                                                </label>
                                            </div>
                                        }
                                        @if (Model.Status != null && Model.Status.Any())
                                        {
                                            <input type="hidden" name="userId" value="@Model.Id" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm">Remove Selected Status</button>
                                        }
                                        else
                                        {
                                            <p>The User has not assigned any Job status.</p>
                                        }
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="taskDescriptionHeader_@Model.Id">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#taskDescriptionCollapse_@Model.Id" aria-expanded="false" aria-controls="taskDescriptionCollapse_@Model.Id">
                        Task Description
                    </button>
                </h2>
                <div id="taskDescriptionCollapse_@Model.Id" class="accordion-collapse collapse" aria-labelledby="taskDescriptionHeader_@Model.Id" data-bs-parent="#userInfoAccordion_@Model.Id">
                    <div class="accordion-body">
                        <div class="card-body p-3">
                            <div class="d-flex row justify-content-start">
                                @foreach (var project in Model.ProjectId)
                                {
                                    <div class="col-md-6 mb-3">
                                        <h6><b>@project.Name</b></h6>
                                        <p>@project.Description</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="supervisorInfoHeader_@Model.Id">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#supervisorInfoCollapse_@Model.Id" aria-expanded="false" aria-controls="supervisorInfoCollapse_@Model.Id">
                        Supervisor Information
                    </button>
                </h2>
                <div id="supervisorInfoCollapse_@Model.Id" class="accordion-collapse collapse" aria-labelledby="supervisorInfoHeader_@Model.Id" data-bs-parent="#userInfoAccordion_@Model.Id">
                    <div class="accordion-body">
                        <div class="d-flex row justify-content-start">
                            @foreach (var item in Model.ProjectId)
                            {
                                <div class="col-md-6 mb-3">
                                    <h6><strong>@item.Name</strong></h6>
                                    @foreach (var supervisor in item.Companies)
                                    {
                                        <div class="card-body p-3">
                                            <h6><strong>Contact Name:</strong> @supervisor.SupervisorName</h6>
                                            <h6><strong>Phone:</strong> @supervisor.SupervisorName</h6>
                                            <h6><strong>Email:</strong> @supervisor.SupervisorEmail</h6>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="companyInfoHeader_@Model.Id">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#companyInfoCollapse_@Model.Id" aria-expanded="false" aria-controls="companyInfoCollapse_@Model.Id">
                        Company Information
                    </button>
                </h2>
                <div id="companyInfoCollapse_@Model.Id" class="accordion-collapse collapse" aria-labelledby="companyInfoHeader_@Model.Id" data-bs-parent="#userInfoAccordion_@Model.Id">
                    <div class="accordion-body">
                        <div class="card-body p-3">
                            <form asp-action="RemoveProjects" method="post">
                                <div class="d-flex row">
                                    @foreach (var project in Model.ProjectId)
                                    {
                                        <div class="col-md-6 mb-3">
                                            <div class="form-check mb-2">
                                                <div>
                                                    <input type="checkbox" class="form-check-input mr-2" id="project-@project.Id" name="projectIds" value="@project.Id.ToString()" />
                                                    <label class="form-check-label" for="project-@project.Id">@project.Name</label>
                                                </div>
                                            </div>
                                            @foreach (var company in project.Companies)
                                            {
                                                <div class="card-body">
                                                    <p><strong>Address:</strong> @company.CompanyAddress</p>
                                                    <p><strong>OrgNr:</strong> @company.OrgNumber</p>
                                                    <p><strong>Website:</strong> @company.CompanyWeb</p>
                                                    <p><strong>Contract:</strong></p>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                                <input type="hidden" name="userId" value="@Model.Id" />
                                @if (Model.ProjectId != null && Model.ProjectId.Any())
                                {
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Remove Selected</button>
                                }
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    function alertFunction() {
        alert("Remove Selected");
    }
</script>

@functions {
    string GetStatusColor(string statusName)
    {
        return statusName switch
        {
            "inactive" => "orange",
            "inprogress" => "blue",
            "active" => "green",
            _ => "status-default",
        };
    }
}
