@model sybring_project.Models.Db.User



<div id="userEle" class="container-fluid">

    @if (Model is not null)
    {

        <div class="row align-items-top">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h4><strong>User information</strong></h4>
                    </div>
                    <div class="card-body p-3">
                        <h5>@Model.FirstName @Model.LastName </h5>
                        <h6> @Model.Email</h6>
                        <h6>@Model.PhoneNumber</h6>
                        <h6> @Model.CitizenMembership</h6>
                        <h6>@Model.Address</h6>
                        <h4><strong>ICE Contact:</strong></h4>
                        <h6> @Model.UserICE</h6>
                        <h6> @Model.ICEContactName</h6>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                    <h4><strong>Company Information</strong> </h4>
                    </div>
                    <div class="card-body p-3">
                        <form asp-action="RemoveProjects" method="post">

                            <div class="d-flex flex-column">
                                @foreach (var project in Model.ProjectId)
                                {
                                    <div class="form-check d-flex justify-content-between align-items-center mb-2">
                                        <div>
                                            <input type="checkbox" class="form-check-input mr-2" id="project-@project.Id" name="projectIds" value="@project.Id.ToString()" />
                                            <label class="form-check-label" for="project-@project.Id">
                                                @project.Name
                                            </label>
                                        </div>
                                        <div>
                                           
                                        </div>
                                    </div>
                                }
                            </div>
                            <input type="hidden" name="userId" value="@Model.Id" />
                           
                                <button type="submit" class="btn btn-outline-danger btn-sm mb-2" onclick="alertFunction()">Remove Selected</button>
                            
                        </form>
                      
                    <p><strong>Addres:</strong></p>
                    <p><strong>OrgNr:</strong></p>
                    <p><strong>Webbsite:</strong></p>
                    <p><strong>Contract:</strong></p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header ">
                    <h4><strong>Task Description</strong></h4>
                    </div>
                    <div class="card-body p-3">
                        @foreach (var project in Model.ProjectId)
                        {
                            <h6>@project.Name</h6>
                            <p>@project.Description</p>
                        }
                </div>
                </div>
                <div class="card">
                    <div class="card-header ">
                    <h4><strong>Supervisor Information</strong></h4>
                    </div>
                    <div class="card-body p-3">
                    <h6><strong>Contact:</strong></h6>
                    <h6><strong>Phone:</strong></h6>
                    <h6><strong>Email:</strong></h6>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <h5>Choose user for details</h5>
    }
</div>
