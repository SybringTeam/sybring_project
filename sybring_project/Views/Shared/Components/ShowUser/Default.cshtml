@model sybring_project.Models.Db.User



<div id="userEle" class="container-fluid">
    @if (Model is not null)
    {
        <div class="row align-items-top">
            <div class="col-lg-6">
                <div class="row">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">User information<span> </span></h5>

                        </div>
                        <div class="card-body p-3" style="min-height:130px">
                            <h5>@Model.FirstName @Model.LastName </h5>
                            <h6> @Model.Email</h6>
                            <h6>@Model.PhoneNumber</h6>
                            <h6> @Model.CitizenMembership</h6>
                            <h6>@Model.Address</h6>
                            <h5 class="card-title">Ice Contact<span> </span></h5>
                            <h6> @Model.UserICE</h6>
                            <h6> @Model.ICEContactName</h6>
                        </div>
                    </div>


                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Company Information<span> </span></h5>

                        </div>
                        <div class="card-body p-3" style="min-height:130px">
                            <form asp-action="RemoveProjects" method="post">
                                <div class="d-flex flex-column">
                                    @foreach (var project in Model.ProjectId)
                                    {
                                        <div class="form-check d-flex justify-content-between align-items-center mb-2">
                                            <div>
                                                <input type="checkbox" class="form-check-input mr-2" id="project-@project.Id" name="projectIds" value="@project.Id.ToString()" />
                                                <label class="form-check-label" for="project-@project.Id">
                                                    @project.Name
                                                </label>
                                            </div>
                                            <div>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <input type="hidden" name="userId" value="@Model.Id" />
                                @if (Model.ProjectId != null && Model.ProjectId.Any())
                                {
                                    <button type="submit" class="btn btn-outline-danger btn-sm mb-2" onclick="alertFunction()">Remove Selected</button>
                                }
                            </form>

                            @foreach (var company in project.Companies)
                            {
                                <p><strong>Addres:</strong>@company.CompanyAddress</p>
                                <p><strong>OrgNr:</strong>@company.OrgNumber</p>
                                <p><strong>Webbsite:</strong>@company.CompanyWeb</p>
                                <p><strong>Contract:</strong></p>
                            }
                        </div>
                        }
                    </div>
                </div>


                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header ">
                            <h5 class="card-title">Task Description</h5>
                        </div>
                        <div class="card-body p-3" style="min-height:130px">
                            @foreach (var project in Model.ProjectId)
                            {
                                <h6>@project.Name</h6>
                                <p>@project.Description</p>
                            }
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Supervisor Information</h5>

                        </div>
                        <div class="card-body p-3" style="min-height:130px">
                            <h6><strong>Contact:</strong></h6>
                            <h6><strong>Phone:</strong></h6>
                            <h6><strong>Email:</strong></h6>

                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    }
</div>
