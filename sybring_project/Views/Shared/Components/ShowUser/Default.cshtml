@model sybring_project.Models.Db.User


<div id="userEle">

    @if (Model is not null)
    {
        <div>
            <p>information</p>
           
            <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>

          
            @foreach (var project in Model.ProjectId)
            {
                <div>
                    @project.Name
                    <form asp-action="RemoveProject" method="post" style="display:inline;">
                        <input type="hidden" name="userId" value="@Model.Id" />
                        <input type="hidden" name="projectId" value="@project.Id" />
                        <button type="submit" class="btn btn-danger remove-project" onclick="alertFunction()">Remove</button>
                    </form>
                </div>
            }

            <p><strong>Income:</strong> @Model.UserIncome</p>
            <p><strong>Email:</strong> @Model.Email</p>
        </div>
    }
     else
    {
        <h5>Choose user for details</h5>
    }


</div>
