@model sybring_project.Models.ViewModels.TimeReportViewModel

@{
    ViewData["Title"] = "CreateReport";
}

<h1>Create Time Report</h1>

@using (Html.BeginForm("CreateReport", "Time", FormMethod.Post))
{
    <hr />

    <!-- validation  -->
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <h2>Week 1</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Day</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Lunch Start</th>
                <th>Lunch End</th>
                <!-- Add a new column for validation messages -->
                <th>Validation Message</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.WeekData != null)
            {
                // Loop through each day of the week
                for (var i = 0; i < Model.WeekData.Count; i++)
                {
                    <tr>
                        <td>@Enum.GetName(typeof(DayOfWeek), i)</td>
                        <td>@Html.TextBoxFor(m => m.WeekData[i].StartWork, new { @class = "form-control", type = "time" })</td>
                        <td>@Html.TextBoxFor(m => m.WeekData[i].EndWork, new { @class = "form-control", type = "time" })</td>
                        <td>@Html.TextBoxFor(m => m.WeekData[i].StartBreak, new { @class = "form-control", type = "time" })</td>
                        <td>@Html.TextBoxFor(m => m.WeekData[i].EndBreak, new { @class = "form-control", type = "time" })</td>
                        <td>@Html.ValidationMessageFor(m => m.WeekData[i].Day, "", new { @class = "text-danger" })</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6">No data available</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Submit</button>
}
