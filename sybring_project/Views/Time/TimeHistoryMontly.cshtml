@model List<sybring_project.Models.Db.TimeHistory>


@{
    ViewData["Title"] = "TimeHistoryMontly";
}

<h1>TimeHistoryMontly</h1>



@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Date</th>
                    <th>Total Working Hours</th>
                    <th>Overtime</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>@item.TotalWorkingHours</td>
                        <td>@item.Overtime</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No monthly time history available.</p>
}