@model sybring_project.Models.Db.CountriesSowAPI.Rootobject


@{
    ViewData["Title"] = "Country List";
}

<h2>@ViewData["Title"]</h2>

<form>
    <div class="form-group">
        <label for="countryDropdown">Select a Country:</label>
        <select id="countryDropdown" class="form-control">
            @foreach (var country in Model.data)
            {
                <option value="@country.country">@country.country</option>
            }
        </select>
    </div>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- Add jQuery -->
    <script>
        $(document).ready(function () {
            // Get the select element and its options
            var select = $('#countryDropdown');
            var options = $('option', select);

            // Sort the options alphabetically based on their text
            options.sort(function (a, b) {
                var aText = $(a).text().toUpperCase();
                var bText = $(b).text().toUpperCase();
                return aText.localeCompare(bText);
            });

            // Remove all options from the select
            select.empty();

            // Re-add the sorted options to the select
            select.append(options);

            // Update Select2 to reflect the changes (if using Select2)
            select.trigger('change');
        });
    </script>
}
