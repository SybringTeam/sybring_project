@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}



<div class="container">
    <h5 class="card-title text-center pb-0 fs-4">Add your personal information</h5>
    <p class="text-center small"></p>
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group mb-3">
                    <label for="Email">Email</label>
                    <input type="text" class="form-control" id="Email" name="Edmail" value="@Model.UserData?.Email"  />
                </div>
                <div class="form-group mb-3">
                    <label for="PhoneNumber">PhoneNumber</label>
                    <input type="text" class="form-control" id="PhoneNumber" name="phone" value="@Model.UserData?.PhoneNumber" required />
                </div>
                <div class="form-group mb-3">
                    <label for="userAddress">Address</label>
                    <input type="text" class="form-control" id="userAddress" name="address" value="@Model.UserData?.Address" required />
                </div>

                <div class="form-group mb-3">
                    <label for="iceContactName" placeholder="(Name & Relative)">ICE Contact Name </label>
                    <span data-bs-toggle="tooltip" data-bs-placement="top" title="(In case of emergency ">
                        <i class="bi bi-question-circle"></i>
                    </span>
                    <input type="text" class="form-control" id="iceContactName" name="iceContactName" value="@Model.UserData?.ICEContactName" required />
     
                </div>

                <div class="form-group mb-3">
                    <label for="iceContactNumber">ICE Contact Number</label>
                    <input type="text" class="form-control" id="iceContactNumber" name="iceContactNumber" value="@Model.UserData?.UserICE" required />
                </div>

                <div class="form-group mb-3">
                    <label for="countryDropdown">Select a Country:</label>
                    <select id="countryDropdown" name="selectedCountry" class="form-control" required>
                        @foreach (var country in Model.ApiCountryNames.OrderBy(c => c.country))
                        {
                            <option value="@country.country">@country.country</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary mt-3">Save</button>
            </form>


                 



    </div>
   
</div>



<div id="displayInfo">
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />


    <script>
      
    </script>
}
