@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "";
}

<h1>@ViewData["Title"]</h1>

<hr />


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body pt-3">
                    <div class="container d-flex justify-content-center ">
                        <img src="https://timeblobstorage.blob.core.windows.net/projectimages/Sybring_Logo-Black_1000px.png" height="50" width="auto" />
                    </div>
                    <h5 class="card-title text-center pb-0 fs-4">Forgot your password?</h5>
                    <p class="text-center small">Enter your Email</p>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                        <button type="submit" class="btn btn-lg btn-primary ">Reset Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
